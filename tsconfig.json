{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types"],
    "inlineSourceMap": true,
    "declaration": true
  },
  "include": [
    "test/**/*.ts",
    "lib/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}